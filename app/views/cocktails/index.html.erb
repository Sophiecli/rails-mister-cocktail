<h1> Cocktails </h1>
<p>There are <%= @cocktails.count %> cocktails on this website</p>
<% @cocktails.each do |cocktail| %>
  <%= link_to cocktail.name, cocktail_path(cocktail) %>
  <ul>
    <% cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %>
        <br>
        <%= dose.ingredient.name %>
      </li>
    <% end %>
  </ul>
<% end %>