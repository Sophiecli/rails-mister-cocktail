<div class="banner">
  <div class="dark-overlay">
    <%= cl_image_tag @cocktail.photo,
      width: 250, height: 250, crop: :fill %>
    <h1><%= @cocktail.name %></h1>
    <% @cocktail.doses.each do |dose| %>
      <p><%= dose.ingredient[:name] %>: <%= dose.description %></p>
      <%= link_to cocktail_dose_path(dose), method: :delete, data: {confirm: "Are you sure?" } do %>
        <i class="fas fa-trash"></i>
      <% end %>
    <% end %>
    <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn"  %>
    <%= link_to "Edit Cocktail", edit_cocktail_path(@cocktail), class: "btn"  %>
    <%= link_to "Return to list", cocktails_path, class: "btn" %>
  </div>
</div>