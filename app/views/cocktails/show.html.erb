<div class="container">
  <h1><%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.ingredient[:name] %>: <%= dose.description %></p>
    <%= link_to "delete this ingredient", cocktail_dose_path(dose),
    method: :delete, data: {confirm: "Are you sure?" }  %>
  <% end %>
  <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail)  %>
  <%= link_to "Return to list", cocktails_path %>
</div>