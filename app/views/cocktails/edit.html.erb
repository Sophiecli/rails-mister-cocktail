<%= render 'shared/navbar' %>
<div class="container" class="background">
  <%= cl_image_tag @cocktail.photo, width: 400, height: 300, crop: :fill  %>
  <h1> Edit <%= @cocktail.name %></h1>
  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit %>
  <% end %>
</div>