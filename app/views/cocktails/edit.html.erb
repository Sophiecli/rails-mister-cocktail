<div class="banner">
  <div class="dark-overlay">
    <%= cl_image_tag @cocktail.photo, width: 250, height: 250, crop: :fill  %>
    <h1> Edit <%= @cocktail.name %></h1>
    <%= simple_form_for(@cocktail) do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit class: 'btn' %>
    <% end %>
  </div>
</div>