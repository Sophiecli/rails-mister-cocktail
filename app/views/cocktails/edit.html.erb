<div class="banner">
  <div class="dark-overlay">
    <%= cl_image_tag @cocktail.photo, class:"img-square"  %>
    <h3> Edit <%= @cocktail.name %></h3>
    <%= simple_form_for(@cocktail) do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit class: 'btn-white' %>
    <% end %>
  </div>
</div>