<div class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <%= link_to root_path do %>
    <i class="fas fa-glass-cheers fa-lg"></i>
  <% end %>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <!-- Links -->
    <%= link_to "All cocktails", cocktails_path, class: "navbar-wagon-item navbar-wagon-link" %>
